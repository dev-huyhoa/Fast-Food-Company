@model HUYHOA_PS13016_ASM.Models.Users

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Register</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="~/assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="~/assets/images/favicon.png" />
  </head>
  <body>
    <div class="container-scroller">
      <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="row w-100 m-0">
          <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
            <div class="card col-lg-8 mx-auto">
              <div class="card-body px-5 py-5">
                <h3 class="card-title text-left mb-3">Register</h3>
                 <form asp-action="Create">
                  <div class="row">
                    <div class="col-6">
                      <div class="form-group">
                     <label asp-for="UserFullName">User Name</label>
                      <input asp-for="UserFullName" type="text" class="form-control p_input">
                      <span asp-validation-for="UserFullName" class="text-danger"></span>

                      </div>
                      <div class="form-group">
                        <label asp-for="Email">Email</label>
                        <input asp-for="Email" class="form-control p_input">
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <span class="text-danger">@ViewBag.message</span>
                      </div>
                      <div class="form-group">
                        <label asp-for="Gender">Gender</label>
                        <select asp-for="Gender" class="form-control p_input" asp-items="Html.GetEnumSelectList<Gender>()"></select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                      </div>
                       <div class="form-group">
                        <label asp-for="UserPassWord">Password</label>
                        <input asp-for="UserPassWord" type="password" class="form-control p_input">
                        <span asp-validation-for="UserPassWord" class="text-danger"></span>
                      </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                        <label asp-for="UserBirthDay">Birthday</label>
                        <input asp-for="UserBirthDay" class="form-control p_input">
                        <span asp-validation-for="UserBirthDay" class="text-danger"></span>
                      </div>
                     
                      <div class="form-group">
                        <label asp-for="UsersPhone">Phone Number</label>
                        <input asp-for="UsersPhone" class="form-control p_input">
                        <span asp-validation-for="UsersPhone" class="text-danger"></span>
                      </div>
                      <div class="form-group">
                        <label asp-for="UserAddress">Address</label>
                        <input asp-for="UserAddress" class="form-control p_input">
                        <span asp-validation-for="UserAddress" class="text-danger"></span>
                      </div>
                     @* <div class="form-group">
                        <label asp-for="RoleID">Role</label>
                        <input asp-for="RoleID" class="form-control p_input" type="text" disabled  value = "2" >
                      </div>*@
                    </div>
                  </div>
                  <div class="form-group d-flex align-items-center justify-content-between">
                    <div class="form-check">
                      <label class="form-check-label">
                        <input type="checkbox" class="form-check-input"> Remember me </label>
                    </div>
                    <a href="#" class="forgot-pass">Forgot password</a>
                  </div>
                  <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-block enter-btn" value="Create">Register</button>
                  </div>
                  <div class="d-flex">
                    <button class="btn btn-facebook col mr-2">
                      <i class="mdi mdi-facebook"></i> Facebook </button>
                    <button class="btn btn-google col">
                      <i class="mdi mdi-google-plus"></i> Google plus </button>
                  </div>
                  <p class="sign-up text-center">Already have an Account?<a class="nav-link" asp-controller="Login" asp-action="Index" >Sign In</a></p>
                  <p class="terms">By creating an account you are accepting our<a href="#"> Terms & Conditions</a></p>
                </form>
              </div>
            </div>
          </div>
          <!-- content-wrapper ends -->
        </div>
        <!-- row ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/assets/js/off-canvas.js"></script>
    <script src="~/assets/js/hoverable-collapse.js"></script>
    <script src="~/assets/js/misc.js"></script>
    <script src="~/assets/js/settings.js"></script>
    <script src="~/assets/js/todolist.js"></script>
   
    <!-- endinject -->
  </body>
</html>